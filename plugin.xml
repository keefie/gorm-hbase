<plugin name='gorm-hbase' version='0.2.3' grailsVersion='1.3.1'>
  <author>Keith Thomas</author>
  <authorEmail>redcoat.systems@gmail.com</authorEmail>
  <title>GORM-HBase Plug-in</title>
  <description>\
A plug-in that emulates the behavior of the GORM-Hibernate plug-in against a Hadoop HDFS HBase 0.20.4 datasource
</description>
  <documentation>http://grails.org/plugin/gorm-hbase</documentation>
  <resources>
    <resource>BuildConfig</resource>
    <resource>Config</resource>
    <resource>DataSource</resource>
    <resource>UrlMappings</resource>
    <resource>InRootDir</resource>
    <resource>org.grails.hbase.Author</resource>
    <resource>org.grails.hbase.Book</resource>
    <resource>org.grails.hbase.Publisher</resource>
    <resource>org.grails.hbase.SortMe</resource>
    <resource>org.grails.hbase.SupportedPropertyTypes</resource>
  </resources>
  <dependencies />
  <behavior />
</plugin>